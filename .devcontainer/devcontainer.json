{
    "name": "Python (uv + MCP)",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "python.terminal.activateEnvInSelectedTerminal": true
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "uv sync && uv add mcp-proxy"
}