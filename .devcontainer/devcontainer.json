{
    "name": "Python (uv + MCP) + Open WebUI",
    "dockerComposeFile": "compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces",
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "hashicorp.terraform"
            ],
            "settings": {
                // Ajustement du chemin pour pointer vers le venv créé par uv
                "python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
                "python.terminal.activateEnvInSelectedTerminal": true
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "uv sync && uv add mcp-proxy"
}